{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Pie chart showing the distribution of Male, Female, and Other using external data.",
    
    "width": 700,
    "height": 750,

    "data": {
          "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/bar%20chart/payment_duration.csv"
    },
    "transform": [{
        "fold": [
        "Under 1 year",
        "1-<2 years",
        "2-<5 years",
        "5-<10 years",
        "10 years+"
        ],
        "as": ["Duration", "Count"]
    }],
    
        
    
    "mark": {"type": "bar"},
    "encoding": {
        "x": {
        "field": "Payment type",
        "type": "nominal",
        "title": "Payment Type",
        "axis": { "labelAngle": -45 }
        },
        "y": {
        "field": "Count",
        "type": "quantitative",
        "title": "Total Count"
        },
        
        "tooltip": [
        {
            "field": "Payment type",
            "type": "nominal",
            "title": "Payment Type"
        },
        {
            "field": "Duration",
            "type": "nominal",
            "title": "Duration"
        },
        {
            "field": "Count",
            "type": "quantitative",
            "title": "Total Count"
        }
        ]
    },
    "title": "Duration Bar Chart"
  
  }
  