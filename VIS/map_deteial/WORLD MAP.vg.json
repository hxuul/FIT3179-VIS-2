          "Launceston (TAS)",
          "Rockhampton (QLD)",
          "Cairns (QLD)"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "_comment": "Layer for background",
      "data": {
        "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/map_deteial/SA1_2021_AUST_GDA2020.json",
        "format": {
          "type": "topojson",
          "feature": "SA1_2021_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "calculate": "'Data Not Available ' + datum.properties.SA2_NAME21",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "strokeWidth": 0.6
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/map_deteial/SA1_2021_AUST_GDA2020.json",
        "format": {
          "type": "topojson",
          "feature": "SA1_2021_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "lookup": "properties.SA2_CODE21",
          "from": {
            "key": "SA2",
            "fields": [
              "SA2",
              "Total Count"
            ],
            "data": {
              "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/map_deteial/Book3.csv",
              "format": {
                "type": "csv"
              }
            }
          }
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "strokeWidth": {
          "value": 0.6
        },
        "color": {
          "field": "Total Count",
          "type": "quantitative",
          "title": "Count",
          "scale": {
            "domain": [
              1,
              2000,
              4000,
              6000,
              8000
            ],
            "range": [
              "#d9f0a3",
              "#addd8e",
              "#78c679",
              "#31a354",
              "#006837"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.SA2_NAME21",
            "type": "nominal",
            "title": "SA2 Name "
          },
          {
            "field": "Total Count",
            "type": "quantitative",
            "title": "Count",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 16
    },
    "axis": {
      "labelFontSize": 8,
      "titleFontSize": 10
    },
    "padding": {
      "left": 20,
      "right": 20,
      "top": 10,
      "bottom": 10
    }
  }
}