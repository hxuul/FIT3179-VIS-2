{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "_comment": "this is the world map section",
  "width": 1000,
  "height": 500,
  "title": "Global Distribution of Social Service Payments per 10,000 Population",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    
    {
      "_comment": "Layer for background",
      "data": {
        "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/map_deteial/SA1_2021_AUST_GDA2020.json",
        "format": {
          "type": "topojson",
          "feature": "SA1_2021_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "calculate": "'Data Not Available ' + datum.properties.SA2_NAME21",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "strokeWidth": 0.6
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/map_deteial/SA1_2021_AUST_GDA2020.json",
        "format": {
          "type": "topojson",
          "feature": "SA1_2021_AUST_GDA2020"
        }
      },
      "transform": [
        {
          "lookup": "properties.SA2_CODE21",
          "from": {
            "key": "SA2",
            "fields": ["SA2","Total Count"],
            "data": {
              "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/map_deteial/SA2Payment.csv",
              "format": {
                "type": "csv"
              }
            }
            
          }
        }
      ],
      "mark": {
        "type": "geoshape"
      },
      "encoding": {
        "strokeWidth": {
          "value": 0.6
        },
        
        
        "tooltip": [
          {
            "field": "properties.SA2_NAME21",
            "type": "nominal",
            "title": "SA2 Name "
          },
          {
            "field": "Total Count",
            "type": "quantitative",
            "title": "Count",
            "format": ".2f"
          },
          {"field":"note2"}
        ]
      }
    }
  ],
    
  
  "config": {
    "title": {
      "font": "sans-serif",
      "fontSize": 16
    },
    "axis": {
      "labelFontSize": 8,
      "titleFontSize": 10
    },
    "padding": {
      "left": 20,
      "right": 20,
      "top": 10,
      "bottom": 10
    }
  }
}