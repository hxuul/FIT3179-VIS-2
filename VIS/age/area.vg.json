
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Area chart showing the distribution of payment types across different age groups.",
  "data": {
    "url": "https://raw.githubusercontent.com/hxuul/FIT3179-VIS-2/refs/heads/main/VIS/age/transformed_aging_data.csv"
  },
  "width":2000,
  "height":300,
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Age Group", 
      "type": "ordinal",
      "title": "Age Group",
      "sort": ["Under 16", "16-20", "21-24", "25-34", "35-44", "45-54", "55-64", "65 and over", "Total"]
    },
    "y": {
      "field": "Count", 
      "type": "quantitative",
      "title": "Count"
    },
    "color": {
      "field": "Payment type", 
      "type": "nominal",
      "title": "Payment Type"
    },
    "tooltip": [
      {"field": "Payment type", "type": "nominal", "title": "Payment Type"},
      {"field": "Age Group", "type": "ordinal", "title": "Age Group"},
      {"field": "Count", "type": "quantitative", "title": "Count"}
    ]
  },
  "title": "Distribution of Payment Types Across Age Groups",
  "config": {"title": {"font": "sans-serif", "fontSize": 14}}
}